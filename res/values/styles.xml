<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TimeLineBaseText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/timeline_title_text</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TimeLineTitleText" parent="@style/TimeLineBaseText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TimeLineTitleGifPost" parent="@style/TimeLineBaseText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TimeLineListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/background_gif_post_grey</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">-12dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

</resources>