<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_title_background</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>    
    
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title_text</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@color/text_shadow_black</item>        
    </style>    
    
    <style name="TimeLineBaseText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/timeline_title_text</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TimeLineTitleText" parent="@style/TimeLineBaseText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TimeLineTitleGifPost" parent="@style/TimeLineBaseText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TimeLineListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/background_gif_post_grey</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">-12dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

</resources>