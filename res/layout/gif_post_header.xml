<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutGifPostHeader"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingBottom="@dimen/bottom_padding_gif_post"
    android:paddingTop="@dimen/half_general_padding">

    <ImageView
        android:id="@+id/imageViewTimeLineHeadLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/timeline_head_logo"
        android:src="@drawable/head_logo" />

    <TextView
        android:id="@+id/textViewTimeLineTitle"
        style="@style/TimeLineTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewTimeLineHeadLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/timeline_title" />

</RelativeLayout>